"""
setup.py file for bgsubcnt
"""

from distutils.core import setup, Extension
import numpy as np

bgsubcnt_module = Extension('_bgsubcnt',
                           swig_opts=['-c++', '-builtin', '-I@CMAKE_CURRENT_SOURCE_DIR@'],
                           sources=['@CMAKE_CURRENT_SOURCE_DIR@/opencv_swig_python.cpp', '@CMAKE_CURRENT_SOURCE_DIR@/bgsubcnt.i', '@BGSUBCNT_INCLUDE_DIR@/bgsubcnt.cpp'],
			   include_dirs=['@BGSUBCNT_INCLUDE_DIR@', np.get_include(), '@_OPENCV_INCLUDE_DIR@'],
			   library_dirs=['@_OPENCV_LIB_DIR@'],
			   libraries=['opencv_core']
                           )

setup (name        = 'bgsubcnt',
       version     = '${CPACK_PACKAGE_VERSION}',
       package_dir = {'': '@CMAKE_CURRENT_SOURCE_DIR@'},
       author      = "Sagi Zeevi (theimpossiblecode.com)",
       url         = 'https://github.com/sagi-z/BackgroundSubtractorCNT',
       description = 'BackgroundSubtractorCNT python API',
       license     = '3-clause BSD',
       ext_modules = [bgsubcnt_module],
       py_modules  = ["bgsubcnt"],
       requires    = ["numpy", "cv2"]
       )
